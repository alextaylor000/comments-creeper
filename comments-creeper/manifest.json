{
  "manifest_version": 2,

  "name": "<!-- CommentsCreeper -->",
  "description": "Uncover any web developer's dirty little secrets by exposing HTML comments on a page at the click of a button!",
  "author": "Alex Taylor",
  "version": "1.3",
  "minimum_chrome_version": "51",
  "short_name": "comments-creeper",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png"
  },

  "browser_action": {
    "default_icon": {
      "38": "icon38.png",
      "19": "icon19.png"
    }
  },
  "background": {
    "scripts": [
      "vendor/jquery-3.0.0.min.js",
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ]
}
